<% include ../partials/header %>
<!-- ___________________HEADER Above - BODY Below___________________________-->




<h1>Genres
    <a href="/genres/add" class="btn btn-success pull-right">Add Genre</a>
</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% for (var i = 0; i < genres.length; i++) { %>
            <tr>
                <td><%= genres[i].name %></td>
                <td>
                    <a class="btn btn-default"
                       href="/genres/edit/<%= genres[i].id %>">Edit</a>

                    <a class="btn btn-danger delete-genre"
                       data-id="<%= genres[i].id %>">Delete</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>





