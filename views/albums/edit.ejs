<% include ../partials/header %>
<!-- ___________________HEADER Above - BODY Below___________________________-->

    <h1>Edit Album</h1>
        <!-- enctype for for MULTER file/image upload -->
        <form enctype="multipart/form-data" action="/albums/edit/<%= id %>" method="POST">

            <div class="form-group">
                <label>Artist</label>
                <input type="text" class="form-control" name="artist"
                       value="<%= album.artist %>" placeholder="Artist Name">
            </div>
            <div class="form-group">
                <label>Album Title</label>
                <input type="text" class="form-control" name="title"
                       value="<%= album.title %>" placeholder="Album Title">
            </div>
            <div class="form-group">
                <label>Genre</label>
                <select class="form-control" name="genre" placeholder="Genre">
                    <% for (var i = 0; i < genres.length; i++) { %>
                        <option value="<%= genres[i].name %>">
                            <%= genres[i].name %>
                        </option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <label>Album Info</label>
                <textarea class="form-control" name="info" placeholder="Album Info">
                    <%= album.info %>
                </textarea>
            </div>
            <div class="form-group">
                <label>Release Year</label>
                <input type="text" class="form-control" name="year" value="<%= album.year %>">
            </div>
            <div class="form-group">
                <label>Record Label</label>
                <input type="text" class="form-control" name="label" value="<%= album.label %>">
            </div>
            <div class="form-group">
                <label>Number of Tracks</label>
                <input type="text" class="form-control" name="tracks" value="<%= album.tracks %>">
            </div>
            <div class="form-group">
                <label>Album Cover</label>
                <input type="file" class="form-control" name="cover" value="<%= album.cover %>">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
            <a class="btn btn-danger" href="/albums">Close</a>
        </form>


<!-- ___________________FOOTER Below - BODY Above___________________________-->
<% include ../partials/footer %>
